<a href="/events">Events Dashboard</a>
<div>
  <h1><%= @event.name %></h1>
  <p>Date: <%= @event.user.first_name %> <%= @event.user.last_name %></p>
  <p>Date: <%= @event.date %></p>
  <p>Date: <%= @event.city %><%= @event.state %></p>
  <p>People who are joining the event: <%= @event.id %></p>
  <table>
    <% @event.users_attending.each do |e| %>
    <tr>
      <td>
        <%= e.first_name %>
      </td>
      <td>
        <%= e.city %>
      </td>
      <td>
        <%= e.state %>
      </td>
    </tr>
    <% end %>
  </table>
</div>

<div>
  <p>
    Discussion about this event:
  </p>
  <div>
    <% @comments.each do |comment| %>
    <p> <%= comment.user.first_name %> <%= comment.comment %></p>
    <% end %>
  </div>
</div>
<div>
  <form action="/comments/create" method="post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <textarea type="text" name="comment" /></textarea>
    <input type="hidden" name="event_id" value="<%= @event.id %>">
    <input id="button" type="submit" value="Submit Comments">
  </form>
</div>
