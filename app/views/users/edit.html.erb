<h2>Edit Your Profile</h2>
<form action="/users/<%= @user.id %>/update" method="post">
  <input type="hidden" name="_method" value="patch" >
  <% if flash %>
  <% flash.each do |message| %>
  <h4><%= message %></h4>
  <% end %>
  <%end %>
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <label>
    First Name <input type="text" name="user[first_name]" value="<%= @user.first_name %>">
  </label>
  <label>
    Last Name <input type="text" name="user[last_name]" value="<%= @user.last_name %>">
  </label>
  <label>
    Email <input type="text" name="user[email]" value="<%= @user.email %>">
  </label>
  <label>
    Location <input type="text" name="user[city]" value="<%= @user.city %>" ><%= select_tag :"user[state]", options_for_select(us_states, "#{@user.state}") %>
  </label>
  <input id="button" type="submit" value="Update Record">
</form>
